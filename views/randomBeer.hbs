<div id="random-beer-main">
    <img src="{{this.image_url}}" alt="beer image">
    <div class="beer-content">
        <h3>{{this.name}}</h3>
        <p>{{this.tagline}}<p>
        <p>{{this.description}}</p>
        <h4><b>Food Pairing</b></h4>
        <ul class="food-pairings">
            {{#each this.food_pairing}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><b>Brewers Tips: </b>{{this.brewers_tips}}</p>
    </div>
</div>